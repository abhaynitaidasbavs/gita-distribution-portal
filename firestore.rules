rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Teams collection
    match /teams/{teamId} {
      // Anyone authenticated can read teams
      allow read: if request.auth != null;
      
      // Only admin can create, update, delete teams
      allow create, update, delete: if request.auth != null && 
                                        request.auth.token.email == 'admin@gmail.com';
      // Team members can update
      allow update: if request.auth != null && 
                              request.auth.uid == teamId;
    }
    
    // Schools collection
    match /schools/{schoolId} {
      allow read: if request.auth != null;
      
      // Admin can do everything
      allow create, update, delete: if request.auth != null && 
                                       request.auth.token.email == 'admin@gmail.com';
      
      // Team members can create schools with their own teamId
      allow create: if request.auth != null && 
                      request.auth.token.email != 'admin@gmail.com' &&
                      exists(/databases/$(database)/documents/teams/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/teams/$(request.auth.uid)).data.role == 'team' &&
                      request.resource.data.teamId == request.auth.uid;
      
      // Team members can update/delete their own schools
      allow update, delete: if request.auth != null && 
                              request.auth.token.email != 'admin@gmail.com' &&
                              exists(/databases/$(database)/documents/teams/$(request.auth.uid)) &&
                              get(/databases/$(database)/documents/teams/$(request.auth.uid)).data.role == 'team' &&
                              resource.data.teamId == request.auth.uid;
    }
    
    // Requirements collection
    match /requirements/{reqId} {
      allow read: if request.auth != null;
      
      // Team members can create
      allow create: if request.auth != null && 
                      request.auth.token.email != 'admin@gmail.com' &&
                      exists(/databases/$(database)/documents/teams/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/teams/$(request.auth.uid)).data.role == 'team';
      
      // Only admin can update/delete
      allow update, delete: if request.auth != null && 
                              request.auth.token.email == 'admin@gmail.com';
    }
    
    // Money Settlements collection
    match /moneySettlements/{settlementId} {
      allow read: if request.auth != null;
      
      // Team members can create
      allow create: if request.auth != null && 
                      request.auth.token.email != 'admin@gmail.com' &&
                      exists(/databases/$(database)/documents/teams/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/teams/$(request.auth.uid)).data.role == 'team';
      
      // Admin can update
      allow update: if request.auth != null && 
                      request.auth.token.email == 'admin@gmail.com';
    }
    
    // Notifications collection
    match /notifications/{notifId} {
      allow read, write: if request.auth != null && 
                           request.auth.token.email == 'admin@gmail.com';
    }
  }
}
